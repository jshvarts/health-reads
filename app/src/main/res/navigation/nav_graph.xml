<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/bookListFragment">

    <fragment
        android:id="@+id/bookListFragment"
        android:name="com.jshvarts.healthreads.booklist.BookListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_book_list">

        <action
            android:id="@+id/action_list_to_detail"
            app:destination="@+id/bookDetailFragment" />

        <action
            android:id="@+id/action_list_to_add_book"
            app:destination="@+id/addBookFragment" />
    </fragment>

    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.jshvarts.healthreads.bookdetail.BookDetailFragment"
        android:label="@string/nav_title_book_detail"
        tools:layout="@layout/fragment_book_detail">

        <argument
            android:name="isbn"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/addBookFragment"
        android:name="com.jshvarts.healthreads.addbook.AddBookFragment"
        android:label="@string/nav_title_add_book"
        tools:layout="@layout/fragment_add_book">

    </fragment>

</navigation>